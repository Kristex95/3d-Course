<div class="ms-2">
  <h1 class="d-flex justify-content-center align-self-center"><%= t('global.index.all_books') %></h1>
  <div class="d-flex flex-row justify-content-center">
    <table class="table table-dark table-striped w-10" style="width: 50rem;">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col"><%= t('global.index.name') %></th>
        <th scope="col"><%= t('global.index.student_name') %></th>
        <th scope="col"><%= t('global.index.student_surname') %></th>
        <th scope="col"><%= t('global.index.order_date') %></th>
        <th scope="col"><%= t('global.index.issue-date') %></th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.id %></td>
          <td><%= book.name %></td>
          <td><%= Student.find(book.student_id).name %></td>
          <td><%= Student.find(book.student_id).surname %></td>
          <td><%= book.order_date %></td>
          <td><%= book.issue_date %></td>
          <td><%= button_to t("global.index.edit"), edit_book_path(book), :method => :get, :class => 'btn btn-primary link' %></td>
          <td><%= button_to t('global.index.delete'), book_path(book), :method => :delete, data: { confirm: "are u sure?" }, :class => 'btn btn-danger link' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= button_to t('global.index.add_new'), new_book_path, :method => :get, :class => 'ms-2 btn btn-success link' %>
  </div>
</div>