<div class="ms-2">
  <h1 class="m3 d-flex justify-content-center align-self-center"><%= t('global.create_edit_student.new_student') %></h1>
  <form action="/student" method="POST" class="d-flex flex-column" style="margin: 0 auto; width: 30rem">
    <div class="mb-3">
      <label for="name" class="form-label"><%= t("global.create_edit_student.student_name")%></label>
      <input type="text" class="form-control" name="name" id="name">
    </div>
    <div class="mb-3">
      <label for="surname" class="form-label"><%= t("global.create_edit_student.student_surname")%></label>
      <input type="text" class="form-control" name="surname" id="surname">
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</div>